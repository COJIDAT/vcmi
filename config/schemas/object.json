{
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/schema",
	"title" : "VCMI map object format",
	"description" : "Description of map object class",
	"required": [ "handler", "name" ],
	"additionalProperties" : false,

	"properties":{
		"index": {
			"type":"number",
		},
		"name": {
			"type":"string",
		},

		"handler": {
			"type":"string",
		},

		"sounds": {
			"type":"object",
			"additionalProperties" : false,
			"description": "Sounds used by this object",
			"properties" : {
				"ambient" : {
					"description" : "Background sound of object",
					"type" : "string"
				},
				"visit" : {
					"description" : "Sound that played on object visit",
					"type" : "string"
				}
			}
		},

		"base": {
			"type" : "object"
		},
		"types": {
			"type":"object",
			"additionalProperties": {
				"$ref" : "vcmi:objectType"
			}
		}
	}
}
